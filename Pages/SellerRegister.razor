@page "/selleregister"

@using WebAPI.Models
@inject ISellerService Iseller

<div class="Form-Seller">

	<h3>Cadastro Vendedor</h3>

</div>

<div class="Form-Seller">

	<EditForm Model="data">

		<div class="form-group">
			<div class="nameSeller">
				<label for="inputName">Nome do Vendedor:</label>
				<InputText id="name" placeholder="Nome" class="form-control" @bind-Value="data.Name"></InputText>	
			</div>
		</div>
	
		<div class="form-group">
			<div class="emailSeller">
				<label for="inputEmail">Email:</label>
				<InputText id="email" typeof="email" @bind-Value="data.Email" placeholder="Email" class="form-control"/>
			</div>	
		</div>

		<div class="form-group">
	
			<div class="regionSeller">
		
				<label for="inputRegion">Região:</label>
				<InputSelect class="form-control"  placeholder="Selecionar..." @bind-Value="data.Region" >
					@foreach(var regions in Enum.GetValues(typeof(Regions)))
					{
						@if(@regions.ToString() == "Vazio"){
							<option value="@regions">Selecione...</option>
						}
						else
						{
							<option value="@regions">@(@regions.ToString() == "Centro_Oeste"? "Centro Oeste" : @regions) </option>			
						}

					}
				</InputSelect>

			</div>	
		</div>
	

		<button class="btn btn-primary" @onclick="addDate">Enviar</button>

	</EditForm>
</div>

@code {


	private Seller data = new Seller();
	

	void addDate(){

		

		Iseller.CreatSeller(data);
	}



}
