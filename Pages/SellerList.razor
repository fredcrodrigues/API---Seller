@page "/sellerslist"

@using WebAPI.Services
@using WebAPI.Models

@inject ISellerService Iseller

<div class="Title-Seller">
	<h3>Lista de Vendedores</h3>
</div>

<div class="Table-Seller">
	<table class="table">
			<thead>
				<tr>
					<th>Vendedor</th>
					<th>Região</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>

	@if (sellrs == null){
			<tbody>
		
				<h4>Carregando...</h4>

			</tbody>
	}else{
			<tbody>
				@if (sellrs.Count() == 0){
						<tr>
							<p>Sem Oportunidades Cadastradas</p>
						</tr>
				}else{
					@foreach (var item in sellrs){
						<tr>
									<td>@item.Name</td>
							
									<td>@item.Region</td>
							
									<td>@item.Email</td>

									<td>
										<span class="bi bi-pencil-square" style="color:#024E9F;font-size:1.3rem;"></span>
									
										<span class="bi bi-trash3" style="color:#B80404; font-size:1.3rem;"></span>
									</td>
								</tr>
					}
			
	
				}
			</tbody>		
	}
</table>
</div>


@code {
	private List<Seller> sellrs;
	

	protected override async Task OnInitializedAsync()
	{
		sellrs = await Iseller.GetSeller();
	} 

}
